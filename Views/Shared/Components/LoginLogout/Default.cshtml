@if (User.Identity.IsAuthenticated)
{
    <a class="navbar-btn small" asp-controller="Account" asp-action="Logout">Logout</a><br />
    @User.Identity.Name.Substring(User.Identity.Name.IndexOf("#") + 1, User.Identity.Name.IndexOf("@") - User.Identity.Name.IndexOf("#") - 1)
}
else
{
    <a class="navbar-btn small" asp-controller="Account" asp-action="Login">Login</a>
}
